        {
          "name": "Get Chainlink Insight",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vs_currency\": \"usd\",\n  \"history_days\": 30\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/token/chainlink/insight",
              "host": ["{{base_url}}"],
              "path": ["api", "token", "chainlink", "insight"]
            },
            "description": "Get AI-powered insight for Chainlink"
