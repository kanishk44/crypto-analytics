        {
          "name": "Get Token Insight (Minimal Body)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/token/:tokenId/insight",
              "host": ["{{base_url}}"],
              "path": ["api", "token", ":tokenId", "insight"],
              "variable": [
                {
                  "key": "tokenId",
                  "value": "bitcoin",
                  "description": "CoinGecko token ID (e.g., bitcoin, ethereum, chainlink)"
                }
              ]
            },
            "description": "Get token insight with minimal request body (uses defaults: vs_currency=usd, history_days=30)"
          },
          "response": []
        }
      ],
      "description": "Token Insight API endpoints - Fetch token market data from CoinGecko and generate AI-based insights"
    },
    {
      "name": "HyperLiquid PnL",
      "item": [
        {
          "name": "Get Wallet PnL (Last 7 Days)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/hyperliquid/{{wallet}}/pnl?start={{start_date}}&end={{end_date}}",
              "host": ["{{base_url}}"],
              "path": ["api", "hyperliquid", "{{wallet}}", "pnl"],
              "query": [
                {
                  "key": "start",
                  "value": "{{start_date}}",
                  "description": "Start date in YYYY-MM-DD format"
                },
                {
                  "key": "end",
                  "value": "{{end_date}}",
                  "description": "End date in YYYY-MM-DD format"
                }
              ]
            },
            "description": "Get daily PnL for a HyperLiquid wallet over the last 7 days"
          },
          "response": []
        },
        {
          "name": "Get Wallet PnL (Specific Range)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
