{
  "info": {
    "_postman_id": "crypto-analytics-api",
    "name": "Crypto Analytics API",
    "description": "Token Insight & HyperLiquid Wallet PnL API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Token Insight",
      "item": [
        {
          "name": "Get Bitcoin Insight",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vs_currency\": \"usd\",\n  \"history_days\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/token/bitcoin/insight",
              "host": ["{{baseUrl}}"],
              "path": ["api", "token", "bitcoin", "insight"]
            }
          },
          "response": []
        },
        {
          "name": "Get Ethereum Insight",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vs_currency\": \"usd\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/token/ethereum/insight",
              "host": ["{{baseUrl}}"],
              "path": ["api", "token", "ethereum", "insight"]
            }
          },
          "response": []
        },
        {
          "name": "Get Chainlink Insight",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/token/chainlink/insight",
              "host": ["{{baseUrl}}"],
              "path": ["api", "token", "chainlink", "insight"]
            }
          },
          "response": []
        },
        {
          "name": "Get Token Insight (Invalid Token)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/token/invalid-token-xyz/insight",
              "host": ["{{baseUrl}}"],
              "path": ["api", "token", "invalid-token-xyz", "insight"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "HyperLiquid PnL",
      "item": [
        {
          "name": "Get Wallet PnL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/hyperliquid/0x1234567890abcdef1234567890abcdef12345678/pnl?start=2025-01-01&end=2025-01-07",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hyperliquid", "0x1234567890abcdef1234567890abcdef12345678", "pnl"],
              "query": [
                {
                  "key": "start",
                  "value": "2025-01-01"
                },
                {
                  "key": "end",
                  "value": "2025-01-07"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Wallet PnL (Invalid Wallet)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/hyperliquid/invalid-wallet/pnl?start=2025-01-01&end=2025-01-07",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hyperliquid", "invalid-wallet", "pnl"],
              "query": [
                {
                  "key": "start",
                  "value": "2025-01-01"
                },
                {
                  "key": "end",
                  "value": "2025-01-07"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Wallet PnL (Invalid Date Range)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/hyperliquid/0x1234567890abcdef1234567890abcdef12345678/pnl?start=2025-01-07&end=2025-01-01",
              "host": ["{{baseUrl}}"],
              "path": ["api", "hyperliquid", "0x1234567890abcdef1234567890abcdef12345678", "pnl"],
              "query": [
                {
                  "key": "start",
                  "value": "2025-01-07"
                },
                {
                  "key": "end",
                  "value": "2025-01-01"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}

